             for(int i=0;i<3;i++){
                if(board[2][i]=='*'){
                   board[2][i]='O';
                   moveMade=true;
                   break;
                 }
            }
        }
        //check for diagonal condition
        if(((board[0][0]=='X'&&board[2][2]=='X')||(board[0][2]=='X'&&board[2][0]=='X'))&& !moveMade){
            for(int i=0;i<3;i++){
                for(int j=0;j<3;j++){
                    if(board[i][j]=='*'){
                        board[i][j]='O';
                        moveMade=true;
                        break;
                    }
                }
                if(moveMade==true){
                    break;
                }
            }
        }

   
    }
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            cout<<board[i][j];
            if(j<2){
                cout<<" | ";
            }
        }
        cout<<endl;
        if(i<2){
        cout<<"--|---|--"<<endl;}
    }
    cout<<endl;
    if(checkrowresult() ){
            cout<<"AI won!";
            exit(0);
        }
    if(checkcolresult() ){
            cout<<"AI won!";
            exit(0);
        }
    if(checkdiagresult() ){
        cout<<"AI won!";
        exit(0);
    }
    }
    turns=turns-1;
    }
   
    int check_row =checkrow();
    if(check_row==0){
        cout<<"AI won!"<<endl;
    }
    else if(check_row==2){
        cout<<"Game ended in a draw!"<<endl;
    }
   
}
else if(level=="easy"){
    int row,col;
    char input;
    turns=5;
    while(turns>0){
    cout<<"Enter row and coloumn :"<<endl;
    cin>>row>>col;
    if(row>3 || row<1 || col>3 || col<1){
        while(1){
            cout<<"Input valid values of row and column:"<<endl;
            cin>>row>>col;
            if(row<4 && row>0 && col<4 && col>0){
                break;
            }
        }
    }
    while(1){
    if(board[row-1][col-1]=='*'){
                input='X';
                break;
            }
    else{
        cout<<"Invalid Input. Enter again: "<<endl;
        cin>>row>>col;
    }   
    }
    board[row-1][col-1]=input;
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            cout<<board[i][j];
            if(j<2){
                cout<<" | ";
            }
        }
        cout<<endl;
        if(i<2){
        cout<<"--|---|--"<<endl;}
    }
    cout<<endl;
    if(checkrowresult2()==1 ||checkcolresult2()==1 ||checkdiagresult2()==1){
            cout<<"You won!";
            exit(0);
        }

    if(turns==1){
        cout<<"Game ended in a draw!!"<<endl;
        exit(0);
    }
    cout<<"Now my turn: "<<endl<<endl;
    while(1){
    int randomrow=rand()%3;
    int randomcol=rand()%3;
        if(board[randomrow][randomcol]=='*'){
            board[randomrow][randomcol]='O';
            break;
        }
        
    }
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            cout<<board[i][j];
            if(j<2){
                cout<<" | ";
            }
        }
        cout<<endl;
        if(i<2){
        cout<<"--|---|--"<<endl;}
    }
    cout<<endl;
    if(checkrowresult2()==0 ||checkcolresult2()==0 ||checkdiagresult2()==0 ){
            cout<<"AI won!";
            exit(0);
        }
    turns=turns-1;
    }
}
}
