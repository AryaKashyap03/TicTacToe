int checkrow(){
    int one=0,zero=0;
     for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            if(board[i][j]=='O'){
                zero+=1;
            }
        }
    }
    if(zero==3){
        return 0;
    }
    else{
        return 2;
    }
}
int checkcol(){
    int one=0,zero=0;
     for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            if(board[j][i]=='O'){
                zero+=1;
            }
        }
    }
    if(zero==3){
        return 0;
    }
    else{
        return 2;
    }
}
bool checkrowresult(){
    if (board[0][0] == board[0][1] &&
        board[0][1] == board[0][2] &&
        board[0][0] != '*') {
        return true;
    }


    if (board[1][0] == board[1][1] &&
        board[1][1] == board[1][2] &&
        board[1][0] != '*') {
        return true;
    }

 
    if (board[2][0] == board[2][1] &&
        board[2][1] == board[2][2] &&
        board[2][0] != '*') {
        return true;
    }

   
    return false;
}


bool checkcolresult(){
     if (board[0][0] == board[1][0] &&
        board[1][0] == board[2][0] &&
        board[0][0] != '*') {
        return true;
    }

   
    if (board[0][1] == board[1][1] &&
        board[1][1] == board[2][1] &&
        board[0][1] != '*') {
        return true;
    }

   
    if (board[0][2] == board[1][2] &&
        board[1][2] == board[2][2] &&
        board[0][2] != '*') {
        return true;
    }

   
    return false;
}
bool checkdiagresult(){
    if(board[0][0] == 'O' && board[1][1] == 'O' && board[2][2] == 'O'){
        return true;
    }
    if(board[0][2] == 'O' && board[1][1] == 'O' && board[2][0] == 'O'){
        return true;
    }
    return false;
}
int checkrowresult2(){
    for (int i = 0; i < 3; i++) {
        if (board[i][0] == board[i][1] &&
            board[i][1] == board[i][2] &&
            board[i][0] != '*') {
            if (board[i][0] == 'X') {
                return 1;
            } else {
                return 0;
            }
        }
    }
    return 2;
}
int checkcolresult2() {
    for (int i = 0; i < 3; i++) {
        if (board[0][i] == board[1][i] &&
            board[1][i] == board[2][i] &&
            board[0][i] != '*') {
            if (board[0][i] == 'X') {
                return 1;
            } else {
                return 0;
            }
        }
    }
    return 2;
}
int checkdiagresult2(){
    if(board[0][0] == 'O' && board[1][1] == 'O' && board[2][2] == 'O'){
        return 0;
    }
    if(board[0][0] == 'X' && board[1][1] == 'X' && board[2][2] == 'X'){
        return 1;
    }
    if(board[0][2] == 'O' && board[1][1] == 'O' && board[2][0] == 'O'){
        return 0;
    }
    if(board[0][2] == 'X' && board[1][1] == 'X' && board[2][0] == 'X'){
        return 1;
    }
    return 2;
}
