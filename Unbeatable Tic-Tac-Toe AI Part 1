        for (int i = 0; i < 3; i++) {
        if (board[1][i] == '*') {
            board[1][i] = '0';// pc=1
            moveMade = true;
            break;
          }
        }
      }

// Check Row 2
        else if ((board[2][0] == board[2][2] && board[2][0] != '*' || 
