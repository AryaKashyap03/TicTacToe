       else if ((((board[0][2] != board[2][2]) && (board[0][2] != '*' && board[2][2] != '*')) || 
           ((board[0][2] != board[1][2]) && (board[0][2] != '*' && board[1][2] != '*')) || 
           ((board[1][2] != board[2][2]) && (board[1][2] != '*' && board[2][2] != '*'))) && !moveMade) {
          for (int i = 0; i < 3; i++) {
             if (board[i][2] == '*') {
               board[i][2] = '0';
               moveMade = true;
               break;
             }
            }
        }
        else if((((board[0][0]!=board[0][2])&& (board[0][0]!='*'&& board[0][2]!='*'))||((board[0][0]!=board[0][1])&& (board[0][0]!='*'&& board[0][1]!='*'))|| ((board[0][1]!=board[0][2])&& (board[0][1]!='*'&& board[0][2]!='*')))&& !moveMade){
    for(int i=0;i<3;i++){
        if(board[0][i]=='*'){
            board[0][i]='0';
            moveMade=true;
            break;
        }
    }
}

else if((((board[1][0]!=board[1][2])&& (board[1][0]!='*'&& board[1][2]!='*'))||((board[1][0]!=board[1][1])&& (board[1][0]!='*'&& board[1][1]!='*'))|| ((board[1][1]!=board[1][2])&& (board[1][1]!='*'&& board[1][2]!='*')))&& !moveMade){
    for(int i=0;i<3;i++){
        if(board[1][i]=='*'){
            board[1][i]='0';
            moveMade=true;
            break;
        }
    }
}

else if((((board[2][0]!=board[2][2])&& (board[2][0]!='*'&& board[2][2]!='*'))||((board[2][0]!=board[2][1])&& (board[2][0]!='*'&& board[2][1]!='*'))|| ((board[2][1]!=board[2][2])&& (board[2][1]!='*'&& board[2][2]!='*')))&& !moveMade){
    for(int i=0;i<3;i++){
        if(board[2][i]=='*'){
            board[2][i]='0';
            moveMade=true;
            break;
        }
    }
}
    }
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            cout<<board[i][j];
        }
        cout<<endl;
    }
    if(checkrowresult() ){
            cout<<"Computer won!";
            exit(0);
        }
    if(checkcolresult() ){
            cout<<"Computer won!";
            exit(0);
        }
    }
    turns=turns-1;
    }
    
    int check_row =checkrow();
    if(check_row==0){
        cout<<"Computer won!"<<endl;
    }
    else if(check_row==2){
        cout<<"Game ended in a draw!"<<endl;
    }
    
}
}
int checkrow(){
    int one=0,zero=0;
     for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            if(board[i][j]=='0'){
                zero+=1;
            }
        }
    }
    if(zero==3){
        return 0;
    }
    else{
        return 2;
    }
}
int checkcol(){
    int one=0,zero=0;
     for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            if(board[j][i]=='0'){
                zero+=1;
            }
        }
    }
    if(zero==3){
        return 0;
    }
    else{
        return 2;
    }
}
bool checkrowresult(){
    if (board[0][0] == board[0][1] && 
        board[0][1] == board[0][2] && 
        board[0][0] != '*') {
        return true;
    }


    if (board[1][0] == board[1][1] && 
        board[1][1] == board[1][2] && 
        board[1][0] != '*') {
        return true;
    }

  
    if (board[2][0] == board[2][1] && 
        board[2][1] == board[2][2] && 
        board[2][0] != '*') {
        return true;
    }

   
    return false;
}


bool checkcolresult(){
     if (board[0][0] == board[1][0] && 
        board[1][0] == board[2][0] && 
        board[0][0] != '*') {
        return true;
    }

    
    if (board[0][1] == board[1][1] && 
        board[1][1] == board[2][1] && 
        board[0][1] != '*') {
        return true;
    }

    
    if (board[0][2] == board[1][2] && 
        board[1][2] == board[2][2] && 
        board[0][2] != '*') {
        return true;
    }

    
    return false;
}
